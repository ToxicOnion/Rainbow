<view>
    <canvas canvas-id="plainId" class="canvas" bindtap="click" bindtouchmove="move" style="height:{{posterHeight}}px;width:{{posterWidth}}px"></canvas>
    <view id="modal" class="modal {{modalHidden}}">
        <view class="header">飞机大战分数</view>
        <view class="content" id="content">{{score}}</view>
        <view class="footer">
            <button bindtap="startGame">继 续</button>
        </view>
    </view>
</view>