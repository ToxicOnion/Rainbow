<cu-custom bgImage="https://image.weilanwl.com/color2.0/plugin/sylb2244.jpg" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">通讯录添加</view>
</cu-custom>
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="cu-form-group margin-top">
    <view class="title">姓名</view>
    <input name="xingming" placeholder="" value="{{name}}"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">手机号码</view>
    <input name="shouji" placeholder="" value="{{phone}}"></input>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        +86
      </view>
      <view class="cu-tag line-blue">
        中国大陆
      </view>
    </view>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">单位</view>
    <input name="company" placeholder="职工" value="{{company}}"></input>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">固话</view>
    <input name="zuoji" placeholder="" value="{{tel}}"></input>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-grey lg" formType="submit"> 提交</button>
    <button class="cu-btn bg-red margin-tb-sm lg" formType="reset">重置</button>
  </view>
</form>